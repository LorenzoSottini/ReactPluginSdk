{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",

    "strict": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "outDir": "dist"
  },
  "include": ["src", "package.json"],
  "exclude": ["node_modules", "dist"]
}
